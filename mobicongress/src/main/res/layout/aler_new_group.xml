<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:background="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:background="@drawable/popover_background">
        <TextView
            android:id="@+id/contenido_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay conexxion"
            android:textSize="20dip"
            android:layout_margin="5dip"
            android:gravity="center"/>
        <EditText
            android:id="@+id/name_group"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/contenido_box"
            android:layout_margin="20dip"/>
        <Button
            android:layout_below="@+id/name_group"
            android:id="@+id/btn_done_image_dialog"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:text="cerrar"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"



            android:background="@drawable/popover_btn_background"
            />

    </RelativeLayout>s
</RelativeLayout>
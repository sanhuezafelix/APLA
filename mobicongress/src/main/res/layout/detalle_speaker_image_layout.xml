<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#eeeeee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/image_speaker"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_margin="10dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/nombre_detalle_speaker"

            android:layout_toLeftOf="@id/image_speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jaime Perez"
            android:textStyle="bold"
            android:padding="10dip"
            android:textSize="15dip"
            />
        <TextView
            android:id="@+id/lugar_detalle_speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="concepcion, Chile"
            android:layout_toLeftOf="@id/image_speaker"
            android:layout_below="@+id/nombre_detalle_speaker"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="10dip"
            android:textSize="15dip"
            />
        <TextView
            android:id="@+id/biografia_speaker_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dip"
            android:text="medico"
            android:layout_below="@+id/image_speaker"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="5dip"
            android:layout_margin="10dip"
            android:textSize="13dip"
            android:layout_marginBottom="10dip"
            android:scrollbars="vertical"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/biografia_speaker_detalle"
            android:id="@+id/detalle_speaker_listview"
            android:listSelector="#00000000"
            android:divider="@null">
        </ListView>
    </RelativeLayout>
</FrameLayout>
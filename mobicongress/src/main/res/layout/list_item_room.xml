<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/ic_room"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/roomName"
        android:layout_toRightOf="@+id/roomImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="18dp"
        android:layout_marginRight="20dip"
        android:text="@string/roomname" />
    <TextView
        android:id="@+id/roomCount"
        android:layout_toRightOf="@+id/roomImage"
        android:layout_below="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"

        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:text="" />
    <TextView
        android:id="@+id/lastMessage"
        android:layout_below="@+id/roomCount"
        android:layout_toRightOf="@+id/roomImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="15dp"
        android:lines="1"
        android:text="@string/last_msg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textViewGroupType"
        android:layout_below="@+id/lastMessage"
        android:layout_toRightOf="@+id/roomImage"
        android:textSize="15dp" />

</RelativeLayout>
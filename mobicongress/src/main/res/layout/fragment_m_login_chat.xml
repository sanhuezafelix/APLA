<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.chat.mLoginChat"
    android:layout_gravity="center"
    android:background="@color/botom_bar_bg">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_margin="10dip"
       android:layout_centerInParent="true">
       <EditText
           android:id="@+id/user_log_in_chat"
           android:layout_width="match_parent"
           android:layout_height="60dip"
           android:layout_margin="10dip"
           android:hint="user@example.com"
           android:inputType="textEmailAddress"
           android:background="@android:color/white"
           android:gravity="center"

           />
       <EditText
           android:id="@+id/user_pass_log_in"
           android:layout_width="match_parent"
           android:layout_height="60dip"
           android:layout_margin="10dip"
           android:hint="PassWord"
           android:gravity="center"
           android:background="@android:color/white"
           android:inputType="textPassword"
           />
       <Button
           android:id="@+id/log_in_chat"
           android:layout_width="match_parent"
           android:layout_height="60dip"
           android:layout_margin="10dip"
           android:text="Log In"
           android:background="@color/segment_color"
           android:textColor="@android:color/white"

           />
       <ProgressBar
           android:id="@+id/progress_log_in"
           android:layout_width="match_parent"
           android:layout_height="20dip"
           android:layout_margin="20dip"
           android:layout_gravity="center"
            android:visibility="gone"
           android:indeterminate="true"
           style="@style/Widget.AppCompat.Base.ProgressBar.Horizontal"
           />
       </LinearLayout>

</RelativeLayout>

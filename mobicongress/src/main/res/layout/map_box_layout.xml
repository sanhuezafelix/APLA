<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
android:background="@android:color/transparent"
    android:padding="10dip">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popover_background">
        <Button
            android:id="@+id/btn_done_image_dialog"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:text="cerrar"
            android:layout_margin="5dip"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/popover_btn_background"
            android:visibility="invisible"/>
        <Utils.TouchImageView
            android:id="@+id/image_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_done_image_dialog"
            android:scaleType="fitXY"
            android:layout_margin="5dip"

            />
        </RelativeLayout>s
</RelativeLayout>
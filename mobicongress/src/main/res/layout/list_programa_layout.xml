<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/header_jornada"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#177abb"
            android:gravity="center"
            android:text="Header jornada"
            android:textColor="@android:color/white"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_simposios"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_header"
            android:paddingLeft="10dip"
            android:text="MÃ³dulos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_simposios"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dip"

            android:visibility="visible" />

        <TextView
            android:id="@+id/header_events"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_header"
            android:paddingLeft="10dip"
            android:text="Eventos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/list_events"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dip"

            android:visibility="visible" />
    </LinearLayout>

</ScrollView>